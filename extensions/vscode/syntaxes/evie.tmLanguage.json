{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Evie",
	"patterns": [
	  {
		"include": "#keywords"
	  },
	  {
		"include": "#strings"
	  },
	  {
		"include": "#chars"
	  },
	  {
		"include": "#comments"
	  },
	  {
		"include": "#block_comment"
	  },
	  {
		"include": "#numeric_literals"
	  },
	  {
		"comment": "await and variants",
		"name": "keyword.control.await.evie",
		"match": "\\bawait(\\.(all|any))?\\b"
	  },	
	  {
		"comment": "Boolean constant",
		"name": "constant.language.boolean.evie",
		"match": "\\b(true|false)\\b"
	  },
	  {
		"comment": "Constant",
		"name": "constant.language.evie",
		"match": "\\b(nil)\\b"
	  },
	  {
		"comment": "Built-in functions",
		"match": "\\b(bool|number|str)\\b(?=\\()",
		"name": "support.function.builtin.evie"
	  },
	  {
		"comment": "Comparison operator",
		"name": "keyword.operator.comparison.evie",
		"match": "(&&|\\|\\||==|!=)"
	  },
	  {
		"comment": "Assignment operator",
		"name": "keyword.operator.assignment.evie",
		"match": "(\\+=|-=|/=|\\*=|%=|\\^=|&=|&^=|\\|=|<<=|>>=|=|--|\\+\\+)"
	  },
	  {
		"comment": "Arithmetic operator",
		"name": "keyword.operator.arithmetic.evie",
		"match": "(!|\\+|-|/|\\*|%|\\^|&|\\||<<|>>|&^)"
	  },
	  {
		"comment": "Comparison operator (second group because of regex precedence)",
		"name": "keyword.operator.comparison.evie",
		"match": "(<=|>=|<|>)"
	  },
	  {
		"comment": "Function call",
		"match": "\\b([A-Za-z][A-Za-z0-9_]*|_[A-Za-z0-9_]+)\\s*\\(",
		"captures": {
		  "1": {
			"name": "entity.name.function.evie"
		  }
		}
	  },
	  {
		"comment": "Miscellaneous operator",
		"name": "keyword.operator.misc.evie"
	  }
	],
	"repository": {
	  "keywords": {
		"patterns": [
		  {
			"name": "keyword.control.evie",
			"match": "\\b(package|pub|if|else|while|for|continue|break|var|return|fn|echo|go)\\b"
		  }
		]
	  },
	  "strings": {
		"name": "string.quoted.double.evie",
		"begin": "\"",
		"end": "\"",
		"patterns": [
		  {
			"name": "constant.character.escape.evie",
			"match": "\\\\."
		  }
		]
	  },
	  "chars": {
		"name": "string.quoted.simple.evie",
		"begin": "'",
		"end": "'",
		"patterns": [
		  {
			"name": "constant.character.escape.evie",
			"match": "\\\\."
		  }
		]
	  },
	  "comments": {
		"name": "comment.line.evie",
		"begin": "//",
		"end": "\n"
	  },
	  "block_comment": {
		"comment": "Block comment",
		"name": "comment.block.evie",
		"begin": "/\\*",
		"end": "\\*/"
	  },
	  "numeric_literals": {
		"patterns": [
		  {
			"comment": "Integer literal",
			"name": "constant.numeric.integer.evie",
			"match": "\\b\\d+\\b"
		  },
		  {
			"comment": "Floating-point literal",
			"name": "constant.numeric.float.evie",
			"match": "\\b\\d+\\.\\d+([eE][-+]?\\d+)?\\b"
		  },
		  {
			"comment": "Hexadecimal literal",
			"name": "constant.numeric.hex.evie",
			"match": "\\b0[xX][0-9a-fA-F]+\\b"
		  }
		]
	  }
	},
	"scopeName": "source.ev"
  }
  